<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<name>material_prime</name>

	<ordering>
		<after>
			<name>primefaces</name>
		</after>
	</ordering>

	<application>
		<system-event-listener>
			<system-event-listener-class>org.primefaces.material.application.PostConstructApplicationEventListener</system-event-listener-class>
			<system-event-class>javax.faces.event.PostConstructApplicationEvent</system-event-class>
			<source-class>javax.faces.application.Application</source-class>
		</system-event-listener>
	</application>

	<component>
		<component-type>org.primefaces.material.component.Toggle</component-type>
		<component-class>org.primefaces.material.component.toggle.Toggle</component-class>
	</component>
	
	<component>
		<component-type>org.primefaces.material.component.Icon</component-type>
		<component-class>org.primefaces.material.component.icon.Icon</component-class>
	</component>
	
	<component>
		<component-type>org.primefaces.material.component.Checkbox</component-type>
		<component-class>org.primefaces.material.component.checkbox.Checkbox</component-class>
	</component>
	
	<component>
		<component-type>org.primefaces.material.component.Button</component-type>
		<component-class>org.primefaces.material.component.button.Button</component-class>
	</component>

	<render-kit>
		<renderer>
			<component-family>org.primefaces.material.component</component-family>
			<renderer-type>org.primefaces.material.component.ToggleRenderer</renderer-type>
			<renderer-class>org.primefaces.material.component.toggle.ToggleRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>org.primefaces.material.component</component-family>
			<renderer-type>org.primefaces.material.component.IconRenderer</renderer-type>
			<renderer-class>org.primefaces.material.component.icon.IconRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>org.primefaces.material.component</component-family>
			<renderer-type>org.primefaces.material.component.CheckboxRenderer</renderer-type>
			<renderer-class>org.primefaces.material.component.checkbox.CheckboxRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>org.primefaces.material.component</component-family>
			<renderer-type>org.primefaces.material.component.ButtonRenderer</renderer-type>
			<renderer-class>org.primefaces.material.component.button.ButtonRenderer</renderer-class>
		</renderer>
	</render-kit>

</faces-config>
